<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/lv_base">

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintBottom_toTopOf="@id/timeText"
        android:textColor="#FFFFFF"
        android:text="Date:"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tvdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/dateText"
        app:layout_constraintLeft_toRightOf="@id/dateText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintBottom_toTopOf="@id/timeText"
        android:textColor="#FFFFFF"
        android:text="03/23/2019"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dateText"
        app:layout_constraintLeft_toLeftOf="@id/dateText"
        android:textColor="#FFFFFF"
        android:text="Time:"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tvtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/timeText"
        app:layout_constraintLeft_toLeftOf="@id/tvdate"
        android:textColor="#FFFFFF"
        android:text="00:00:00"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/disText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timeText"
        app:layout_constraintLeft_toLeftOf="@id/dateText"
        android:textColor="#FFFFFF"
        android:text="Dis(km):"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tvdis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/disText"
        app:layout_constraintLeft_toLeftOf="@id/tvdate"
        android:textColor="#FFFFFF"
        android:text="00.00"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/speedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/disText"
        app:layout_constraintLeft_toLeftOf="@id/dateText"
        android:textColor="#FFFFFF"
        android:text="Min/km:"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tvspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/speedText"
        app:layout_constraintLeft_toLeftOf="@id/tvdate"
        android:textColor="#FFFFFF"
        android:text="00.00"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/trackPic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/tvdate"
        app:layout_constraintTop_toTopOf="@id/tvdate"
        app:layout_constraintBottom_toBottomOf="@id/tvspeed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.9"/>


</android.support.constraint.ConstraintLayout>
